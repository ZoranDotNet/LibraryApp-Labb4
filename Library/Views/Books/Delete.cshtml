@model Library.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<section class="p-3 bg-dark text-light text-center rounded w-50 mx-auto mt-5">
    <h2>Delete</h2>
    <hr />
    <div class="row">
        <div class="">
            <form asp-action="Delete" method="post">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" disabled/>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" disabled/>
                </div>

                <div class="form-group mt-3 mb-2 d-flex justify-content-center align-items-center gap-3 ">
                    <input type="submit" value="Delete" class="btn btn-danger col-3" />
                    <a asp-action="Index" class="btn btn-secondary col-3">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>
